.plus-info-view.modal.fade(id='myModal_' + recipe._id, tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          a.fa.fa-times(aria-hidden='true')
        h4#myModalLabel.modal-title RecipeÂ´s info
      .modal-body
        .col-xs-12
          .thumbnail 
            img(src=recipe.recipeImg)
            .caption
              h3= recipe.title
              p
                | #{recipe.description}
              br
              h5 INGREDIENTS
              table
                tbody
                  each ingredient, i in recipe.ingredients
                    tr
                      td
                        h5= ingredient.name
                      td
                        h5= ingredient.quantity
                          | gr
        .modal-footer
          button.btn.btn-primary.btn-xs(type='button', data-dismiss='modal') Close